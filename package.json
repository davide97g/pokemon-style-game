{
  "name": "mini-world",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:server": "turbo run dev --filter=server",
    "dev:all": "turbo run dev",
    "preview": "turbo run preview",
    "build": "turbo run build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "turbo": "^2.6.2"
  },
  "packageManager": "bun@1.3.3",
  "type": "module"
}
